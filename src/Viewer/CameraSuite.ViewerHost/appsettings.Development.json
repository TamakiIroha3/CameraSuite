{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "CameraSuite": {
    "Viewer": {
      "MediamtxExecutable": "mediamtx",
      "MediamtxConfigPath": "infra/mediamtx/mediamtx.yaml",
      "MediamtxApiPort": 9997,
      "ViewerId": "viewer-dev",
      "MaxSimultaneousStreams": 16,
      "PreallocatedSrtListeners": 16,
      "UiRefreshRateHz": 30,
      "DisplayMode": "Grid",
      "ControlPlaneUri": "ws://127.0.0.1:5051/ws/viewer",
      "TrustAllCertificates": true
    },
    "Recording": {
      "RootDirectory": "recordings",
      "AutoStartRecording": false,
      "SegmentMinutes": 30
    }
  }
}

