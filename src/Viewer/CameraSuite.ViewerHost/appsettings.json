{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "CameraSuite": {
    "Nats": {
      "Url": "tls://127.0.0.1:4222",
      "ClientName": "camera-viewer",
      "ClientCertificatePath": "",
      "ClientKeyPath": "",
      "ClientKeyPassword": "",
      "CaCertificatePath": "",
      "TrustAllCertificates": true,
      "RequestTimeoutSeconds": 5
    },
    "Viewer": {
      "MediamtxExecutable": "mediamtx",
      "MediamtxConfigPath": "infra/mediamtx/mediamtx.yaml",
      "ViewerId": "viewer-default",
      "MaxSimultaneousStreams": 16,
      "UiRefreshRateHz": 30,
      "DisplayMode": "Grid"
    },
    "Recording": {
      "RootDirectory": "recordings",
      "AutoStartRecording": false,
      "SegmentMinutes": 30
    }
  }
}
